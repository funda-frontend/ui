{
    "name": "@funda/ui",
    "version": "8.0.0",
    "author": "funda",
    "license": "MIT",
    "files": [
        "src/components/",
        "src/styles/components/",
        "src/index.js"
    ],
    "description": "funda's vue.js components library",
    "main": "src/index.js",
    "repository": "github:funda-frontend/ui",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "start": "npm run storybook",
        "build": "build-storybook -o public --quiet",
        "storybook": "start-storybook -s ./static",
        "release": "npx semantic-release",
        "prepublishOnly": "npm run generateExports",
        "generateExports": "node ./src/generateExports.js",
        "test": "jest",
        "test-watch": "jest --watch"
    },
    "devDependencies": {
        "@babel/core": "^7.12.9",
        "@babel/preset-env": "^7.14.7",
        "@funda/eslint-config": "^1.0.0",
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/commit-analyzer": "^8.0.1",
        "@semantic-release/git": "^9.0.0",
        "@semantic-release/npm": "^7.0.6",
        "@semantic-release/release-notes-generator": "^9.0.1",
        "@storybook/addon-essentials": "^6.3.2",
        "@storybook/vue": "^6.3.2",
        "@testing-library/jest-dom": "^5.11.5",
        "@testing-library/vue": "^5.8.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^27.0.6",
        "babel-loader": "^8.1.0",
        "babel-preset-vue": "^2.0.2",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.0.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-vue": "^7.13.0",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "jest-serializer-vue": "^2.0.2",
        "jest-watch-typeahead": "^0.6.1",
        "lint-staged": "^11.0.0",
        "lodash": "^4.17.20",
        "postcss-loader": "^4.3.0",
        "semantic-release": "^17.2.2",
        "vue-eslint-parser": "^7.8.0",
        "vue-jest": "^3.0.7",
        "vue-loader": "^15.9.5",
        "vue-template-compiler": "^2.6.14"
    },
    "dependencies": {
        "@funda/icons": "^2.0.0",
        "@funda/tailwind-config": "^6.3.2",
        "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.3",
        "vue": "^2.6.14",
        "vue-popperjs": "^2.3.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,vue}": "eslint --fix"
    },
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ]
}
